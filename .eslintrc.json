{
    "env": {
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "react/jsx-uses-vars": "error"
    },
    "overrides": [
        {
            "files": [ "src/totara/**/*.tsx", "src/totara/**/*.ts" ],
            "rules": {
                "no-unused-vars": "off",
                "@typescript-eslint/no-unused-vars": "error"
            }
        }
    ],
	"parser": "@typescript-eslint/parser"
}
